                </form>
            </li>
            <li>
                <form method='POST' action='/albums'>
                    <input class="add-a-new-album" type="submit" value='Strategy' />
                    <input type="hidden" name="name" value='Strategy' />
                </form>
            </li>
        </ul>
        <!-- Add styling to the li items -->
    </div>

    <div class="col-75">
        <h1>
            YOUR ALBUMS
        </h1>

        <% for (let album of data.albums) { %>
        <div class="albumBox">
            <div class="albumRow">
                <div class="left">
                    <a href="/albums/<%= album.id%>">
                        <h1><%= album.name %></h1>
                    </a>
                </div>
                <div class="right">
                    <form method="POST" action="/albums/<%= album.id %>?_method=DELETE">
                        <input type="submit" value="Delete album">
                    </form>
                </div>
            </div>

        </div>
        <% } %>
    </div>
</div>



<%- include('./partials/end') %>