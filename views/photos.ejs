<%- include('./partials/boilerplate') %>

<!-- <div class="wrapper"> -->
<h3>Add a new picture</h3>

<!-- POST is making a wrong request, it should create a new picture -->
<form method='POST' action='/albums/<%= data.photos.id %>'>
    <input type='submit' value='New Picture' />
</form>

<div class="imageContainer">
    <!-- <h2>pictures</h2> -->
    <% for (let photo of data.photos) { %>
    <div class="imageBox">
        <a href="/albums/<%= photo.id%>"><img class="photobook_picture" src="<%= photo.pic_url %>"> </a>
        <div class=" row like-row">
            <img src="/notLiked.png" id="likedButton" width="36">
            <h5>Liked status</h5>
        </div>
        <div class="row">
            <div>
                <h4>See it in full res</h4>
            </div>
        </div>
        <div class="row">
            <!-- Below deletes the album -->
            <form method="POST" action="/albums/<%= photo.id %>?_method=DELETE">
                <input type="submit" value="Delete this picture">
            </form>
        </div>
        <p>Temp</p>
        <h4><%= photo.pic_desc %></h4>
    </div>

    <% } %>

</div>

