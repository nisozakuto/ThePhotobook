<%- include('./partials/boilerplate') %>
<%- include('./partials/nav') %>

<!-- <div class="wrapper"> -->
<div class="addAPic">
    <!-- <h3>Add a new picture</h3> -->

    <form method='GET' action='/photos/newphoto'>
        <input type='submit' value='add!' />
    </form>
</div>

<div class="imageContainer">

    <% console.log("this is returning the photos on the page: ", data.photo) %>
    <% for (let photo of data.photos) { %>
    <div class="imageBox">
        <a href="/photos/<%= photo.id%>"><img class="photobook_picture" src="<%= photo.pic_url %>"> </a>
        <div class=" row like-row">
            <img src="/notLiked.png" id="likedButton" width="36">
            <h5>Liked status</h5>
        </div>
        <div class="row">
            <div>
                <h4>See it in full res</h4>
            </div>
        </div>
        <div class="row">
            <!-- Below deletes the album -->
            <form method="POST" action="/photos/<%= photo.id %>?_method=DELETE">
                <input type="submit" value="Delete this picture">
            </form>
        </div>
        <p>Temp</p>
        <h4><%= photo.pic_desc %></h4>
    </div>
    <% } %>
</div>

